@import "functions";
@import 'mixins';

@include exports('spark-icons-placeholders') {

  %icon {
    font-family: {{fontName}};
    font-weight: normal;
    font-style: normal;
    font-size: 1em;
    display: inline-block;
    vertical-align: middle;
    width: 1em;
    height: 1em;
    line-height: 1;
    text-transform: none;
    letter-spacing: 0.00001em;
    word-wrap: normal;
    white-space: pre;
    direction: ltr;

    // Support for all WebKit browsers.
    -webkit-font-smoothing: antialiased;

    // Support for Safari and Chrome.
    text-rendering: optimizeLegibility;

    // Support for Firefox.
    -moz-osx-font-smoothing: grayscale;

    // Support for IE.
    font-feature-settings: 'liga';
  }

{{#each codepoints}}
{{#unless (equals @key 'zzzzzDoNotUse')}}
  %{{../classPrefix}}{{@key}} { content: '{{@key}}'; }
{{/unless}}
{{/each}}

}
